{
  "compilerOptions": {
    "paths": {
      "~*": ["../src/*"]
    },
    "lib": [
      "es6",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext",
      "dom"
    ],
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node"
  },
  "exclude": ["cor"]
}
